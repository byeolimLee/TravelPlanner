<ScrollView
    android:id="@+id/frame"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/travelitem_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/activity_vertical_margin_half"
            android:paddingBottom="@dimen/activity_vertical_margin_half"
            android:orientation="vertical" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name:" />
            <EditText
                android:id="@+id/travelitem_name_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:imeOptions="actionNext">
            </EditText>
        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/travelitem_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/travelitem_name"
            android:paddingTop="@dimen/activity_vertical_margin_half"
            android:paddingBottom="@dimen/activity_vertical_margin_half"
            android:orientation="vertical" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location:" />
            <EditText
                android:id="@+id/travelitem_location_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:imeOptions="actionNext" >
            </EditText>
        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/travelitem_admissionfee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/travelitem_location"
            android:paddingTop="@dimen/activity_vertical_margin_half"
            android:paddingBottom="@dimen/activity_vertical_margin_half"
            android:orientation="vertical" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Admission Fee:" />
            <EditText
                android:id="@+id/travelitem_admissionfee_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionNext" >
            </EditText>
        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/travelitem_admissionhour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/travelitem_admissionfee"
            android:paddingTop="@dimen/activity_vertical_margin_half"
            android:paddingBottom="@dimen/activity_vertical_margin_half"
            android:orientation="vertical" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Admission Hour:" />
            <EditText
                android:id="@+id/travelitem_admissionhour_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:imeOptions="actionNext">
            </EditText>
        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/travelitem_howtofind"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/travelitem_admissionhour"
            android:paddingTop="@dimen/activity_vertical_margin_half"
            android:paddingBottom="@dimen/activity_vertical_margin_half"
            android:orientation="vertical" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="How to get there:" />
            <EditText
                android:id="@+id/travelitem_howtofind_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionNext" >
            </EditText>
        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/travelitem_notes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/travelitem_howtofind"
            android:paddingTop="@dimen/activity_vertical_margin_half"
            android:paddingBottom="@dimen/activity_vertical_margin_half"
            android:orientation="vertical" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notes:" />
            <EditText
                android:id="@+id/travelitem_notes_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionDone" >
            </EditText>
        </LinearLayout>

    </RelativeLayout>
</ScrollView>